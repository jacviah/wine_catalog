<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="by.jacviah.winery.dao" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>by.jacviah.winery.dao.entity.CountryEntity</class>
        <class>by.jacviah.winery.dao.entity.RegionEntity</class>
        <class>by.jacviah.winery.dao.entity.WineEntity</class>
        <class>by.jacviah.winery.dao.entity.BottleEntity</class>
        <class>by.jacviah.winery.dao.entity.GrapeEntity</class>
        <class>by.jacviah.winery.dao.entity.UserEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/wine_catalog?useUnicode=true&amp;characterEncoding=UTF-8&amp;
                            &amp;serverTimezone=UTC&amp;
                            logger=com.mysql.cj.log.Slf4JLogger&amp;profileSQL=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <!--<property name="hibernate.hbm2ddl.auto" value="create"/>-->
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
        </properties>
    </persistence-unit>
</persistence>